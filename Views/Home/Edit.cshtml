@model Burialmain

<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />

    <label asp-for="Fieldbookexcavationyear">Excavation Year:</label>
    <input asp-for="Fieldbookexcavationyear" class="form-control" />

    <label asp-for="Area">Area:</label>
    <input asp-for="Area" class="form-control" />

    <label asp-for="Depth">Depth:</label>
    <input asp-for="Depth" class="form-control" />

    <label asp-for="Ageatdeath">Age at Death:</label>
    <input asp-for="Ageatdeath" class="form-control" />

    <label asp-for="Headdirection">Head Direction:</label>
    <input asp-for="Headdirection" class="form-control" />

    <label asp-for="Haircolor">Hair Color:</label>
    <input asp-for="Haircolor" class="form-control" />

    <label asp-for="Facebundles">Face Bundles:</label>
    <input asp-for="Facebundles" class="form-control" />

    <label asp-for="Wrapping">Wrapping:</label>
    <input asp-for="Wrapping" class="form-control" />

    <label asp-for="Text">Text:</label>
    <input asp-for="Text" class="form-control" />

    <label asp-for="Samplescollected">Samples Collected:</label>
    <input asp-for="Samplescollected" class="form-control" />

    <label asp-for="Burialnumber">Burial Number:</label>
    <input asp-for="Burialnumber" class="form-control" />

    <label asp-for="Sex">Sex:</label>
    <select asp-for="Sex" class="form-control">
        <option value="M">Male</option>
        <option value="F">Female</option>
        <option value="U">Unknown</option>
    </select>

    <button type="submit" class="btn btn-primary">Update Record</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

