@model BurialTextileViewModel

<a asp-action="Create">Add New Burial</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Burial ID</th>
            <th>Excavation Year</th>
            <th>Textile ID</th>
            <th>Textile Name</th>
            <th>Area</th>
            <th>Sex</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.JoinedData)
        {
            <tr>
                <td>@item.BurialId</td>
                <td>@item.ExcavationYear</td>
                <td>@item.TextileId</td>
                <td>@item.TextileName</td>
                <td>@item.Area</td>
                <td>@item.Sex</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BurialId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.BurialId">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>



<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Burials" asp-route-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>