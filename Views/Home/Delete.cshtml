@model WhosYourMummy.Models.Burialmain

@*Delete page to confirm record deletion*@

<h2>Are you sure you want to delete this record?</h2>

<form asp-action="DeleteConfirmed" method="post">
    <input asp-for="Id" type="hidden" />
    <p>
        ID: @Model.Id <br />
        Excavation Year: @Model.Fieldbookexcavationyear <br />
        Area: @Model.Area <br />
        Sex: @Model.Sex <br />
    </p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Burials" class="btn btn-secondary">Cancel</a>
</form>

